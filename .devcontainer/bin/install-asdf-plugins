#!/bin/bash -i

# Plugin Versions are pinned for reproducible dev environment.

# install and pin erlang: https://github.com/asdf-vm/asdf-erlang
asdf plugin add erlang https://github.com/asdf-vm/asdf-erlang.git
asdf plugin update erlang 0d402e65a1328ed06c7920184f9806acfe251213

# install and pin elixir: https://github.com/asdf-vm/asdf-elixir
asdf plugin-add elixir https://github.com/asdf-vm/asdf-elixir.git
asdf plugin update elixir 1693b354bb08ff24e356bbcf3be99b177c32a06e
